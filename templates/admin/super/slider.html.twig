{% extends 'admin/base.html.twig' %}

{% block title %}Super Admin - Slider{% endblock %}

{% block body %}
{% set ui = currentLocale == 'tr' ? {
    title: 'Ana Sayfa Slider Yönetimi',
    subtitle: 'Ana sayfa slider kartlarının başlık, açıklama ve görsel URL alanlarını buradan yönetebilirsin.',
    new_item: 'Yeni Slider Maddesi',
    editing: 'Düzenlenen dil',
    add: 'Slider Maddesi Ekle',
    items: 'Slider İçerikleri',
    content: 'İçerik',
    status: 'Durum',
    delete: 'Sil',
    update: 'Güncelle',
    active: 'Aktif',
    passive: 'Pasif',
    on_air: 'Yayında',
    empty: 'Slider içeriği yok. İlk maddeni ekleyebilirsin.'
} : {
    title: 'Homepage Slider Management',
    subtitle: 'Manage homepage slider title, description and image URL fields from this screen.',
    new_item: 'New Slider Item',
    editing: 'Editing locale',
    add: 'Add Slider Item',
    items: 'Slider Contents',
    content: 'Content',
    status: 'Status',
    delete: 'Delete',
    update: 'Update',
    active: 'Active',
    passive: 'Inactive',
    on_air: 'Published',
    empty: 'No slider content yet. Add your first item.'
} %}
<div class="row g-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">{{ ui.title }}</h4>
                <span class="badge text-bg-primary">Super Admin</span>
            </div>
            <div class="card-body">
                <div class="text-muted">{{ ui.subtitle }}</div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card h-100">
            <div class="card-header"><strong>{{ ui.new_item }}</strong></div>
            <div class="card-body">
                <form method="post" action="{{ path('admin_super_slider_create') }}" class="row g-2">
                    <input type="hidden" name="_token" value="{{ csrf_token('super_slider_create') }}">
                    <input type="hidden" name="lang" value="{{ currentLocale }}">
                    <div class="col-12">
                        <div class="small text-primary">{{ ui.editing }}: {{ currentLocale|upper }}</div>
                    </div>

                    <div class="col-12">
                        <label class="form-label mb-1">Key</label>
                        <input class="form-control" name="key_name" value="{{ nextSliderKey }}" required>
                    </div>
                    <div class="col-12">
                        <label class="form-label mb-1">Baslik</label>
                        <input class="form-control" name="title" placeholder="Orn: Premium PDF Tasarimlari" required>
                    </div>
                    <div class="col-12">
                        <label class="form-label mb-1">Aciklama</label>
                        <textarea class="form-control" name="description" rows="4" placeholder="Slider kartinda gosterilecek aciklama" required></textarea>
                    </div>
                    <div class="col-12">
                        <label class="form-label mb-1">Gorsel URL</label>
                        <input class="form-control" name="image_url" placeholder="/assets/slider/banner-1.svg">
                    </div>
                    <div class="col-12">
                        <label class="form-label mb-1">Rozet (opsiyonel)</label>
                        <input class="form-control" name="kicker" placeholder="Orn: One Cikan Ozellik">
                    </div>
                    <div class="col-12">
                        <label class="form-label mb-1">Sag Not (opsiyonel)</label>
                        <input class="form-control" name="note" placeholder="Orn: Super Admin > Slider ekranindan guncellenir.">
                    </div>
                    <div class="col-12 form-check ms-2">
                        <input class="form-check-input" type="checkbox" id="slider_published" name="is_published" checked>
                        <label class="form-check-label" for="slider_published">Yayinda</label>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary w-100">{{ ui.add }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card h-100">
            <div class="card-header"><strong>{{ ui.items }}</strong></div>
            <div class="card-body table-responsive">
                <table class="table align-middle">
                    <thead>
                    <tr>
                        <th>Key</th>
                        <th>{{ ui.content }}</th>
                        <th>{{ ui.status }}</th>
                        <th>{{ ui.delete }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for row in sliderRows %}
                        <tr>
                            <td class="small text-muted" style="min-width: 130px;">{{ row.keyName }}</td>
                            <td style="min-width: 420px;">
                                <form method="post" action="{{ path('admin_super_slider_update', {id: row.id}) }}" class="row g-2 mb-0">
                                    <input type="hidden" name="_token" value="{{ csrf_token('super_slider_update_' ~ row.id) }}">
                                    <input type="hidden" name="lang" value="{{ currentLocale }}">
                                    <div class="col-12">
                                        <input class="form-control form-control-sm" name="title" value="{{ row.title }}" required>
                                    </div>
                                    <div class="col-12">
                                        <textarea class="form-control form-control-sm" name="description" rows="3" required>{{ row.description }}</textarea>
                                    </div>
                                    <div class="col-12">
                                        <input class="form-control form-control-sm" name="image_url" value="{{ row.imageUrl }}" placeholder="/assets/slider/banner-1.svg">
                                    </div>
                                    <div class="col-md-6">
                                        <input class="form-control form-control-sm" name="kicker" value="{{ row.kicker }}" placeholder="Rozet metni">
                                    </div>
                                    <div class="col-md-6">
                                        <input class="form-control form-control-sm" name="note" value="{{ row.note }}" placeholder="Sag not metni">
                                    </div>
                                    <div class="col-12 d-flex align-items-center justify-content-between">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="content_active_{{ row.id }}" name="is_published" {{ row.isPublished ? 'checked' : '' }}>
                                            <label class="form-check-label" for="content_active_{{ row.id }}">{{ ui.on_air }}</label>
                                        </div>
                                        <button class="btn btn-sm btn-primary">{{ ui.update }}</button>
                                    </div>
                                </form>
                            </td>
                            <td>
                                <span class="badge {{ row.isPublished ? 'text-bg-success' : 'text-bg-secondary' }}">{{ row.isPublished ? ui.active : ui.passive }}</span>
                            </td>
                            <td style="min-width: 95px;">
                                <form method="post" action="{{ path('admin_super_content_delete', {id: row.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('super_content_delete_' ~ row.id) }}">
                                    <input type="hidden" name="_redirect" value="admin_super_slider">
                                    <input type="hidden" name="lang" value="{{ currentLocale }}">
                                    <button class="btn btn-sm btn-outline-danger w-100">{{ ui.delete }}</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="4" class="text-muted">{{ ui.empty }}</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
