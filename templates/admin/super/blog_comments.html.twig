{% extends 'admin/base.html.twig' %}

{% block title %}Super Admin - Blog Yorum Onayi{% endblock %}

{% block body %}
<div class="row g-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Blog Yorum Moderasyonu</h4>
                <a href="{{ path('admin_super_blog_index') }}" class="btn btn-sm btn-outline-secondary">Blog Yazilarina Don</a>
            </div>
            <div class="card-body">
                <div class="text-muted">Bekleyen yorumlari onayla, yayindaki yorumu geri cek veya yorumu sil.</div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-header"><strong>Yorum Listesi</strong></div>
            <div class="card-body">
                {% for comment in comments %}
                    <div class="border rounded p-3 mb-3">
                        <div class="d-flex flex-wrap justify-content-between gap-2 mb-2">
                            <div>
                                <div class="fw-semibold">{{ comment.authorName }}</div>
                                <div class="small text-muted">
                                    YazÄ±: {{ comment.post.title }}
                                    | Tarih: {{ comment.createdAt|date('d.m.Y H:i') }}
                                    | Durum:
                                    {% if comment.isPublished %}
                                        <span class="badge text-bg-success">Yayinda</span>
                                    {% else %}
                                        <span class="badge text-bg-warning">Bekliyor</span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="small text-muted">Slug: {{ comment.post.slug }}</div>
                        </div>

                        <div class="mb-3">{{ comment.body|nl2br }}</div>

                        <div class="d-flex flex-wrap gap-2">
                            <form method="post" action="{{ path('admin_super_blog_comment_approve', {id: comment.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('super_blog_comment_approve_' ~ comment.id) }}">
                                <button class="btn btn-sm btn-success">Onayla</button>
                            </form>

                            <form method="post" action="{{ path('admin_super_blog_comment_reject', {id: comment.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('super_blog_comment_reject_' ~ comment.id) }}">
                                <button class="btn btn-sm btn-outline-warning">Onayi Kaldir</button>
                            </form>

                            <form method="post" action="{{ path('admin_super_blog_comment_delete', {id: comment.id}) }}" class="ms-auto">
                                <input type="hidden" name="_token" value="{{ csrf_token('super_blog_comment_delete_' ~ comment.id) }}">
                                <button class="btn btn-sm btn-outline-danger">Sil</button>
                            </form>
                        </div>
                    </div>
                {% else %}
                    <div class="text-muted">Henuz yorum yok.</div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
