{% extends 'admin/base.html.twig' %}

{% block title %}Super Admin - Planlar{% endblock %}

{% block body %}
<div class="row g-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Plan Yonetimi</h4>
                <span class="badge text-bg-primary">Super Admin</span>
            </div>
            <div class="card-body">
                <div class="text-muted">Planlari olustur, limitleri duzenle ve musteriye sunulan ozellikleri merkezi yonet.</div>
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card h-100">
            <div class="card-header"><strong>Yeni Plan</strong></div>
            <div class="card-body">
                <form method="post" action="{{ path('admin_super_plan_create') }}" class="row g-2">
                    <input type="hidden" name="_token" value="{{ csrf_token('super_plan_create') }}">
                    <div class="col-md-6"><input class="form-control" name="code" placeholder="Kod (free/premium)" required></div>
                    <div class="col-md-6"><input class="form-control" name="name" placeholder="Plan adi" required></div>
                    <div class="col-12"><input class="form-control" name="description" placeholder="Aciklama"></div>
                    <div class="col-md-4"><input class="form-control" type="number" min="1" name="max_restaurants" value="1" required></div>
                    <div class="col-md-4"><input class="form-control" type="number" min="1" name="max_users" value="2" required></div>
                    <div class="col-md-4"><input class="form-control" name="yearly_price" value="0.00" required></div>
                    <div class="col-12 form-check ms-2">
                        <input class="form-check-input" type="checkbox" id="plan_active" name="is_active" checked>
                        <label class="form-check-label" for="plan_active">Aktif</label>
                    </div>
                    <div class="col-12"><button class="btn btn-primary">Plani Olustur</button></div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-7">
        <div class="card h-100">
            <div class="card-header"><strong>Planlar</strong></div>
            <div class="card-body table-responsive">
                <table class="table align-middle">
                    <thead><tr><th>Plan</th><th>Ozellikler</th><th>Durum</th><th>Sil</th></tr></thead>
                    <tbody>
                    {% for plan in plans %}
                        <tr>
                            <td>
                                <div class="fw-semibold">{{ plan.name }}</div>
                                <div class="small text-muted">{{ plan.code }}</div>
                            </td>
                            <td style="min-width: 420px;">
                                <form method="post" action="{{ path('admin_super_plan_update', {id: plan.id}) }}" class="row g-2 mb-0">
                                    <input type="hidden" name="_token" value="{{ csrf_token('super_plan_update_' ~ plan.id) }}">
                                    <div class="col-12">
                                        <input class="form-control form-control-sm" name="description" value="{{ plan.description }}" placeholder="Aciklama">
                                    </div>
                                    <div class="col-12 d-flex gap-2">
                                        <input class="form-control form-control-sm" type="number" min="1" name="max_restaurants" value="{{ plan.maxRestaurants }}" required>
                                        <input class="form-control form-control-sm" type="number" min="1" name="max_users" value="{{ plan.maxUsers }}" required>
                                        <input class="form-control form-control-sm" name="yearly_price" value="{{ plan.yearlyPrice }}" required>
                                    </div>
                                    <div class="col-12 d-flex align-items-center justify-content-between">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="plan_active_{{ plan.id }}" name="is_active" {{ plan.isActive ? 'checked' : '' }}>
                                        <label class="form-check-label" for="plan_active_{{ plan.id }}">Aktif</label>
                                    </div>
                                    <button class="btn btn-sm btn-primary">Guncelle</button>
                                    </div>
                                </form>
                            </td>
                            <td>
                                <span class="badge {{ plan.isActive ? 'text-bg-success' : 'text-bg-secondary' }}">{{ plan.isActive ? 'Aktif' : 'Pasif' }}</span>
                            </td>
                            <td style="min-width: 100px;">
                                <form method="post" action="{{ path('admin_super_plan_delete', {id: plan.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('super_plan_delete_' ~ plan.id) }}">
                                    <button class="btn btn-sm btn-outline-danger w-100">Sil</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="4" class="text-muted">Plan bulunamadi.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
{% endblock %}
