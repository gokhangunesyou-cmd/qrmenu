{% extends 'admin/base.html.twig' %}

{% block title %}Super Admin - Site Temasi{% endblock %}

{% block body %}
    {% set ui = {
        title: 'Site Temasi',
        subtitle: 'Public site icin tema secimi ve renk paleti ayari.',
        active_theme: 'Aktif Tema',
        palette: 'Renk Paleti (JSON)',
        update: 'Guncelle',
        note: 'Renk paleti JSON formatinda saklanir. Degerleri guncelleyebilirsiniz.'
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">{{ ui.title }}</h2>
            <div class="text-muted">{{ ui.subtitle }}</div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post" action="{{ path('admin_super_site_theme_update') }}" class="row g-3">
                <input type="hidden" name="_token" value="{{ csrf_token('super_site_theme_update') }}">
                <div class="col-12 col-lg-4">
                    <label class="form-label">{{ ui.active_theme }}</label>
                    {% for key, theme in themes %}
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="active_theme" id="theme_{{ key }}" value="{{ key }}" {{ key == activeKey ? 'checked' : '' }}>
                            <label class="form-check-label" for="theme_{{ key }}">
                                <strong>{{ theme.name }}</strong>
                                <div class="small text-muted">Font: {{ theme.font_head }} / {{ theme.font_body }}</div>
                            </label>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-12 col-lg-8">
                    <label class="form-label">{{ ui.palette }}</label>
                    <textarea class="form-control font-monospace" name="palette_json" rows="16">{{ paletteValue }}</textarea>
                    <div class="form-text">{{ ui.note }}</div>
                </div>
                <div class="col-12 d-flex justify-content-end">
                    <button class="btn btn-primary">{{ ui.update }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
