{% block title %}{{ ui.title }}{% endblock %}

{% block body %}
<div class="row g-4">
    <div class="col-lg-7">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-1">{{ ui.overview }}</h4>
                    <small class="text-muted">{{ ui.overview_subtitle }}</small>
                </div>
                <span class="badge bg-primary">{{ ui.live }}</span>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="p-3 rounded-4 bg-light border">
                            <div class="text-muted small">{{ ui.product_mgmt }}</div>
                            <div class="fw-semibold mt-1">{{ ui.update_menu }}</div>
                            <a href="{{ path('admin_product_web_index', {lang: currentLocale}) }}" class="btn btn-sm btn-primary mt-3">{{ ui.go_products }}</a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 rounded-4 bg-light border">
                            <div class="text-muted small">{{ ui.qrcodes }}</div>
                            <div class="fw-semibold mt-1">{{ ui.manage_tables }}</div>
                            <a href="{{ path('admin_qrcode_index', {lang: currentLocale}) }}" class="btn btn-sm btn-primary mt-3">{{ ui.qr_area }}</a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 rounded-4 bg-light border">
                            <div class="text-muted small">{{ ui.media_library }}</div>
                            <div class="fw-semibold mt-1">{{ ui.image_archive }}</div>
                            <a href="{{ path('admin_media_index', {lang: currentLocale}) }}" class="btn btn-sm btn-primary mt-3">{{ ui.media }}</a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 rounded-4 bg-light border">
                            <div class="text-muted small">{{ ui.restaurant_profile }}</div>
                            <div class="fw-semibold mt-1">{{ ui.edit_info }}</div>
                            <a href="{{ path('admin_restaurant_show', {lang: currentLocale}) }}" class="btn btn-sm btn-outline-secondary mt-3">{{ ui.view_profile }}</a>
                        </div>
                    </div>
                </div>
                <div class="mt-4 p-4 rounded-4" style="background: linear-gradient(135deg, rgba(37,99,235,0.12), rgba(249,115,22,0.12));">
                    <div class="fw-semibold">{{ ui.quick_note }}</div>
                    <div class="text-muted small">{{ ui.quick_note_body }}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">{{ ui.quick_actions }}</h5>
            </div>
            <div class="card-body d-grid gap-2">
                <a href="{{ path('admin_product_web_create', {lang: currentLocale}) }}" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> {{ ui.add_product }}
                </a>
                <a href="{{ path('admin_media_index', {lang: currentLocale}) }}" class="btn btn-outline-secondary">
                    <i class="bi bi-cloud-upload"></i> {{ ui.upload_media }}
                </a>
                <a href="{{ path('admin_restaurant_edit', {lang: currentLocale}) }}" class="btn btn-outline-secondary">
                    <i class="bi bi-pencil-square"></i> {{ ui.edit_restaurant }}
                </a>
                {% if app.user.customerAccount %}
                <a href="{{ path('admin_account_index', {lang: currentLocale}) }}" class="btn btn-outline-secondary">
                    <i class="bi bi-people"></i> {{ ui.membership_team }}
                </a>
                {% endif %}
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <a href="{{ path('admin_super_index', {lang: currentLocale}) }}" class="btn btn-outline-secondary">
                    <i class="bi bi-shield-lock"></i> {{ ui.super_admin_center }}
                </a>
                {% endif %}
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">{{ ui.status }}</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small">{{ ui.session }}</div>
                        <div class="fw-semibold">{{ ui.active }}</div>
                    </div>
                    <span class="badge bg-success">{{ ui.ok }}</span>
                </div>
                <hr>
                <div class="text-muted small">{{ ui.support_note }}</div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
