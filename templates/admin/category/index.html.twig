{% extends 'admin/base.html.twig' %}

{% set ui = {
    tr: {
        title: 'Kategoriler',
        count: 'kategori',
        new: 'Yeni Kategori',
        name: 'Ad',
        description: 'Açıklama',
        sort: 'Sıra',
        status: 'Durum',
        actions: 'İşlemler',
        empty: 'Henüz kategori yok.',
        active: 'Aktif',
        passive: 'Pasif',
        delete_confirm: 'Bu kategoriyi silmek istediğinize emin misiniz?'
    },
    en: {
        title: 'Categories',
        count: 'categories',
        new: 'New Category',
        name: 'Name',
        description: 'Description',
        sort: 'Order',
        status: 'Status',
        actions: 'Actions',
        empty: 'No categories yet.',
        active: 'Active',
        passive: 'Inactive',
        delete_confirm: 'Are you sure you want to delete this category?'
    },
    ar: {
        title: 'الفئات',
        count: 'فئة',
        new: 'فئة جديدة',
        name: 'الاسم',
        description: 'الوصف',
        sort: 'الترتيب',
        status: 'الحالة',
        actions: 'الإجراءات',
        empty: 'لا توجد فئات بعد.',
        active: 'نشط',
        passive: 'غير نشط',
        delete_confirm: 'هل أنت متأكد أنك تريد حذف هذه الفئة؟'
    },
    ru: {
        title: 'Категории',
        count: 'категорий',
        new: 'Новая категория',
        name: 'Название',
        description: 'Описание',
        sort: 'Порядок',
        status: 'Статус',
        actions: 'Действия',
        empty: 'Категорий пока нет.',
        active: 'Активно',
        passive: 'Неактивно',
        delete_confirm: 'Вы уверены, что хотите удалить эту категорию?'
    }
}[currentLocale] ?? {
    title: 'Categories',
    count: 'categories',
    new: 'New Category',
    name: 'Name',
    description: 'Description',
    sort: 'Order',
    status: 'Status',
    actions: 'Actions',
    empty: 'No categories yet.',
    active: 'Active',
    passive: 'Inactive',
    delete_confirm: 'Are you sure you want to delete this category?'
} %}

{% block title %}{{ ui.title }}{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Flash messages #}
    {% for type in ['success', 'error'] %}
        {% for message in app.flashes(type) %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">{{ ui.title }}</h2>
            <small class="text-muted">{{ categories|length }} {{ ui.count }}</small>
        </div>
        <a href="{{ path('admin_category_create', {lang: currentLocale}) }}" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> {{ ui.new }}
        </a>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>{{ ui.name }}</th>
                            <th>{{ ui.description }}</th>
                            <th>{{ ui.sort }}</th>
                            <th>{{ ui.status }}</th>
                            <th class="text-end">{{ ui.actions }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% if categories is empty %}
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">{{ ui.empty }}</td>
                        </tr>
                    {% else %}
                        {% for category in categories %}
                            {% set display = categoryView[category.id] ?? {'name': category.name, 'description': category.description} %}
                            <tr>
                                <td class="fw-semibold">{{ display.name }}</td>
                                <td class="text-muted">{{ display.description ?: '-' }}</td>
                                <td>{{ category.sortOrder }}</td>
                                <td>
                                    {% if category.isActive %}
                                        <span class="badge bg-success-subtle text-success">{{ ui.active }}</span>
                                    {% else %}
                                        <span class="badge bg-secondary-subtle text-secondary">{{ ui.passive }}</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <a href="{{ path('admin_category_edit', {uuid: category.uuid, lang: currentLocale}) }}" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_category_delete', {uuid: category.uuid, lang: currentLocale}) }}" class="d-inline"
                                          onsubmit="return confirm('{{ ui.delete_confirm }}');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('category_delete_' ~ category.uuid) }}">
                                        <input type="hidden" name="lang" value="{{ currentLocale }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
