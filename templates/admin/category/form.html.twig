{% extends 'admin/base.html.twig' %}

{% block title %}{{ category ? 'Kategori Düzenle' : 'Yeni Kategori' }}{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Flash messages #}
    {% for type in ['success', 'error'] %}
        {% for message in app.flashes(type) %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">{{ category ? 'Kategori Düzenle' : 'Yeni Kategori' }}</h2>
            <small class="text-muted">Kategori bilgilerini yönetin</small>
        </div>
        <a href="{{ path('admin_category_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post">
                {% if category %}
                    <input type="hidden" name="_token" value="{{ csrf_token('category_edit_' ~ category.uuid) }}">
                {% else %}
                    <input type="hidden" name="_token" value="{{ csrf_token('category_create') }}">
                {% endif %}

                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="name" class="form-label">Kategori Adı <span class="text-danger">*</span></label>
                        <input type="text" id="name" name="name" class="form-control" required
                               value="{{ formData.name is defined ? formData.name : (category ? category.name : '') }}">
                    </div>
                    <div class="col-md-6">
                        <label for="icon" class="form-label">İkon (opsiyonel)</label>
                        <input type="text" id="icon" name="icon" class="form-control"
                               placeholder="bi bi-cup-hot"
                               value="{{ formData.icon is defined ? formData.icon : (category ? category.icon : '') }}">
                        <small class="text-muted">Bootstrap icon sınıfı yazabilirsiniz.</small>
                    </div>
                    <div class="col-12">
                        <label for="description" class="form-label">Açıklama</label>
                        <textarea id="description" name="description" class="form-control" rows="3">{{ formData.description is defined ? formData.description : (category ? category.description : '') }}</textarea>
                    </div>
                    <div class="col-md-3">
                        <label for="sort_order" class="form-label">Sıra</label>
                        <input type="number" id="sort_order" name="sort_order" class="form-control"
                               value="{{ formData.sort_order is defined ? formData.sort_order : (category ? category.sortOrder : 0) }}">
                    </div>
                    <div class="col-md-3 d-flex align-items-center">
                        {% set isActiveValue = formData.is_active is defined ? formData.is_active : (category ? category.isActive : true) %}
                        <div class="form-check form-switch mt-4">
                            <input class="form-check-input" type="checkbox" id="is_active" name="is_active" value="1" {{ isActiveValue ? 'checked' : '' }}>
                            <label class="form-check-label" for="is_active">Aktif</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4 gap-2">
                    <a href="{{ path('admin_category_index') }}" class="btn btn-outline-secondary">İptal</a>
                    <button type="submit" class="btn btn-primary">{{ category ? 'Güncelle' : 'Kaydet' }}</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
