    <style>
        :root {
            --ink-900: #0f172a;
            --ink-700: #334155;
            --ink-500: #64748b;
            --surface-0: #f8fafc;
            --surface-1: #ffffff;
            --surface-2: #f1f5f9;
            --brand-500: #2563eb;
            --brand-400: #3b82f6;
            --accent-500: #f97316;
            --success-500: #16a34a;
            --danger-500: #dc2626;
            --border-soft: rgba(148, 163, 184, 0.3);
            --shadow-soft: 0 16px 40px rgba(15, 23, 42, 0.08);
            --shadow-card: 0 10px 24px rgba(15, 23, 42, 0.08);
        }

        body {
            font-family: 'Work Sans', sans-serif;
            background: radial-gradient(circle at top left, #eef2ff 0%, #f8fafc 40%, #ffffff 100%);
            color: var(--ink-900);
            min-height: 100vh;
        }

        h1, h2, h3, h4, h5, .brand-title {
            font-family: 'Space Grotesk', sans-serif;
            letter-spacing: -0.02em;
        }

        .admin-shell {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 260px;
            background: linear-gradient(180deg, #0f172a 0%, #111827 100%);
            color: #e2e8f0;
            padding: 1.75rem 1.5rem;
            position: sticky;
            top: 0;
            height: 100vh;
        }

        .sidebar .brand {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 2rem;
        }

        .brand-mark {
            width: 44px;
            height: 44px;
            border-radius: 14px;
            background: linear-gradient(135deg, #2563eb, #22d3ee);
            display: grid;
            place-items: center;
            color: #fff;
            font-size: 1.2rem;
        }

        .nav-section {
            margin-top: 1.5rem;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: rgba(226, 232, 240, 0.6);
        }

        .nav-link {
            color: #e2e8f0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.6rem 0.8rem;
            border-radius: 12px;
            margin-top: 0.35rem;
        }

        .nav-link i {
            font-size: 1.1rem;
        }

        .nav-link.active,
        .nav-link:hover {
            background: rgba(59, 130, 246, 0.18);
            color: #fff;
        }

        .content {
            flex: 1;
            padding: 2rem 2.5rem 3rem;
        }

        .topbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: var(--surface-1);
            border-radius: 20px;
            padding: 1rem 1.5rem;
            box-shadow: var(--shadow-soft);
            margin-bottom: 2rem;
        }

        .lang-flags {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 4px 6px;
            border-radius: 999px;
            border: 1px solid var(--border-soft);
            background: var(--surface-1);
        }

        .lang-flag {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 28px;
            height: 28px;
            border-radius: 999px;
            text-decoration: none;
            font-size: 1rem;
            background: var(--surface-2);
            border: 0;
        }

        .lang-flag.active {
            box-shadow: 0 6px 16px rgba(15, 23, 42, 0.16);
            transform: translateY(-1px);
        }

        .topbar .pill {
            background: var(--surface-2);
            padding: 0.45rem 0.9rem;
            border-radius: 999px;
            color: var(--ink-700);
            font-size: 0.85rem;
        }

        .card {
            border: 1px solid var(--border-soft);
            border-radius: 20px;
            box-shadow: var(--shadow-card);
        }

        .card-header {
            background: transparent;
            border-bottom: 1px solid var(--border-soft);
            padding: 1rem 1.25rem;
        }

        .card-body {
            padding: 1.25rem;
        }

        .btn-primary {
            background: var(--brand-500);
            border-color: var(--brand-500);
            border-radius: 12px;
            font-weight: 600;
        }

        .btn-outline-secondary {
            border-radius: 12px;
        }

        .badge {
            border-radius: 999px;
        }

        .table thead th {
            color: var(--ink-500);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-size: 0.75rem;
        }

        .page-title {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .page-title .title-chip {
            background: rgba(37, 99, 235, 0.12);
            color: var(--brand-500);
            border-radius: 999px;
            padding: 0.35rem 0.9rem;
            font-size: 0.8rem;
            font-weight: 600;
        }

        @media (max-width: 992px) {
            .admin-shell {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .content {
                padding: 1.5rem;
            }

            .topbar {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.75rem;
            }
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
