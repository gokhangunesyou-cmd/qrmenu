{% block stylesheets %}
<style>
    .qr-thumb {
        width: 64px;
        height: 64px;
        object-fit: contain;
        border-radius: 12px;
        background: #fff;
        border: 1px solid rgba(148,163,184,0.4);
        padding: 4px;
    }
    .qr-thumb-placeholder {
        width: 64px;
        height: 64px;
        border-radius: 12px;
        background: #eef2ff;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #94a3b8;
        font-size: 1.5rem;
    }
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #6c757d;
    }
    .empty-state i {
        font-size: 4rem;
        margin-bottom: 1rem;
        display: block;
    }
    .download-dropdown .dropdown-menu {
        min-width: 180px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Flash messages #}
    {% for type in ['success', 'error'] %}
        {% for message in app.flashes(type) %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {# Header #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">{{ ui.title }}</h2>
            <small class="text-muted">{{ qrCodes|length }} {{ ui.count }}</small>
        </div>
        <a href="{{ path('admin_qrcode_create') }}" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> {{ ui.create }}
        </a>
    </div>

    {# QR Codes Table #}
    {% if qrCodes|length > 0 %}
        <div class="table-responsive">
            <table class="table table-hover align-middle bg-white rounded shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">{{ ui.preview }}</th>
                        <th>{{ ui.type }}</th>
                        <th>{{ ui.description }}</th>
                        <th>{{ ui.url }}</th>
                        <th>{{ ui.date }}</th>
                        <th>{{ ui.download }}</th>
                        <th style="width: 80px;">{{ ui.actions }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for qr in qrCodes %}
                        <tr>
                            <td>
                                {% if qr.storagePath %}
                                    <img src="{{ path('admin_qrcode_preview', {uuid: qr.uuid}) }}"
                                         alt="QR" class="qr-thumb">
                                {% else %}
                                    <div class="qr-thumb-placeholder">
                                        <i class="bi bi-qr-code"></i>
                                    </div>
                                {% endif %}
                            </td>
                            <td>
                                {% if qr.type.value == 'restaurant' %}
                                    <span class="badge bg-primary">{{ ui.restaurant }}</span>
                                {% else %}
                                    <span class="badge bg-info text-dark">{{ ui.table }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if qr.type.value == 'table' %}
                                    <strong>{{ qr.tableLabel ?? (ui.table_prefix ~ ' ' ~ qr.tableNumber) }}</strong>
                                    <br><small class="text-muted">{{ ui.table_prefix }} #{{ qr.tableNumber }}</small>
                                {% else %}
                                    <strong>{{ ui.main_menu }}</strong>
                                {% endif %}
                            </td>
                            <td>
                                <small class="text-muted" style="word-break: break-all;">{{ qr.encodedUrl }}</small>
                            </td>
                            <td>
                                <small>{{ qr.createdAt|date('d.m.Y H:i') }}</small>
                            </td>
                            <td>
                                <div class="dropdown download-dropdown">
                                    <button class="btn btn-sm btn-outline-success dropdown-toggle" type="button"
                                            data-bs-toggle="dropdown">
                                        <i class="bi bi-download"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><h6 class="dropdown-header">{{ ui.download_png }}</h6></li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download', {uuid: qr.uuid, format: 'png', size: 128}) }}">
                                                <i class="bi bi-file-image"></i> 128 × 128 px
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download', {uuid: qr.uuid, format: 'png', size: 256}) }}">
                                                <i class="bi bi-file-image"></i> 256 × 256 px
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download', {uuid: qr.uuid, format: 'png', size: 384}) }}">
                                                <i class="bi bi-file-image"></i> 384 × 384 px
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download', {uuid: qr.uuid, format: 'png', size: 512}) }}">
                                                <i class="bi bi-file-image"></i> 512 × 512 px
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download', {uuid: qr.uuid, format: 'png', size: 768}) }}">
                                                <i class="bi bi-file-image"></i> 768 × 768 px
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download', {uuid: qr.uuid, format: 'png', size: 1024}) }}">
                                                <i class="bi bi-file-image"></i> 1024 × 1024 px
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header">{{ ui.download_svg }}</h6></li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download', {uuid: qr.uuid, format: 'svg', size: 512}) }}">
                                                <i class="bi bi-filetype-svg"></i> {{ ui.vector }}
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header">{{ ui.pdf_templates }}</h6></li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download_label_pdf', {uuid: qr.uuid, templateSlug: 'classic', primary: '#1f2937', background: '#ffffff'}) }}">
                                                <i class="bi bi-file-earmark-pdf"></i> Classic Kare
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download_label_pdf', {uuid: qr.uuid, templateSlug: 'modern', primary: '#0f766e', background: '#f8fafc'}) }}">
                                                <i class="bi bi-file-earmark-pdf"></i> Modern Kart
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download_label_pdf', {uuid: qr.uuid, templateSlug: 'elegant', primary: '#8b5e34', background: '#fffaf0'}) }}">
                                                <i class="bi bi-file-earmark-pdf"></i> Elegant Gold
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download_label_pdf', {uuid: qr.uuid, templateSlug: 'minimal', primary: '#111827', background: '#ffffff'}) }}">
                                                <i class="bi bi-file-earmark-pdf"></i> Minimal Temiz
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download_label_pdf', {uuid: qr.uuid, templateSlug: 'bistro', primary: '#7c2d12', background: '#fff7ed'}) }}">
                                                <i class="bi bi-file-earmark-pdf"></i> Bistro Rounded
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_qrcode_download_label_pdf', {uuid: qr.uuid, templateSlug: 'rustic', primary: '#3f3f46', background: '#f5f5f4'}) }}">
                                                <i class="bi bi-file-earmark-pdf"></i> Rustic Craft
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-danger delete-btn"
                                        data-uuid="{{ qr.uuid }}"
                                        data-label="{{ qr.type.value == 'table' ? (qr.tableLabel ?? (ui.table_prefix ~ ' ' ~ qr.tableNumber)) : ui.main_menu }}"
                                        data-token="{{ csrf_token('qrcode_delete_' ~ qr.uuid) }}"
                                        title="{{ ui.delete }}">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="empty-state">
            <i class="bi bi-qr-code"></i>
            <h5>{{ ui.empty_title }}</h5>
            <p>{{ ui.empty_body }}</p>
            <a href="{{ path('admin_qrcode_create') }}" class="btn btn-primary mt-2">
                <i class="bi bi-plus-lg"></i> {{ ui.create }}
            </a>
        </div>
    {% endif %}
</div>

{# Delete Confirmation Modal #}
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ ui.delete_modal_title }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="deleteLabel"></strong> {{ ui.delete_modal_body }}</p>
                <p class="text-muted mb-0">{{ ui.delete_modal_note }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ ui.cancel }}</button>
                <form method="post" id="deleteForm" class="d-inline">
                    <input type="hidden" name="_token" id="deleteToken">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> {{ ui.delete }}
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.delete-btn').forEach(function(btn) {
        btn.addEventListener('click', function() {
            var uuid = this.dataset.uuid;
            var label = this.dataset.label;
            var token = this.dataset.token;

            document.getElementById('deleteLabel').textContent = label;
            document.getElementById('deleteForm').action = '/admin/qrcodes/' + uuid + '/delete';
            document.getElementById('deleteToken').value = token;

            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        });
    });
});
</script>
{% endblock %}
