        --panel: #fffdf8;
        --panel-strong: #ffffff;
        --brand: #1f4d3d;
        --brand-soft: #d8ebe3;
        --accent: #9f6b31;
        --shadow: 0 12px 30px rgba(31, 41, 55, 0.08);
    }

    * { box-sizing: border-box; }

    body {
        margin: 0;
        color: var(--ink);
        font-family: "Manrope", sans-serif;
        background:
            radial-gradient(circle at 85% 12%, rgba(159, 107, 49, 0.15) 0%, rgba(159, 107, 49, 0) 40%),
            radial-gradient(circle at 20% 8%, rgba(31, 77, 61, 0.12) 0%, rgba(31, 77, 61, 0) 36%),
            linear-gradient(180deg, #fcfaf5 0%, #f4f1ea 55%, #efebe2 100%);
