                        <div>
                            <span class="slide-kicker">{{ item.kicker|default('Slider ' ~ '%02d'|format(loop.index)) }}</span>
                            <h3>{{ item.title }}</h3>
                            <p>{{ item.body|nl2br }}</p>
                        </div>
                        <div class="slide-aside">
                            <strong>{{ ui.slider_aside_title }}</strong>
                            {% if item.imageUrl is defined and item.imageUrl is not empty %}
