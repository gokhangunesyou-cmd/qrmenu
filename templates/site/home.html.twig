                <h1>{{ cms.heroTitle }}</h1>
                <p>{{ cms.heroDescription }}</p>
                <div class="btn-row">
                    <a href="{{ cms.heroPrimaryUrl }}" class="btn btn-primary">{{ cms.heroPrimaryText }}</a>
                    <a href="{{ cms.heroSecondaryUrl }}" class="btn btn-ghost">{{ cms.heroSecondaryText }}</a>
                </div>
            </article>

            <aside class="panel hero-side">
                {% for card in ui.hero_cards %}
                    <div class="mini-card">
                        <div class="metric">{{ card.title }}</div>
                        <p class="muted">{{ card.body }}</p>
                    </div>
                {% endfor %}
            </aside>
        </div>
    </section>

    {% set defaultSliderItems = [
        {
            title: ui.slider_defaults[0].title,
            body: ui.slider_defaults[0].body
        },
        {
            title: ui.slider_defaults[1].title,
            body: ui.slider_defaults[1].body
        },
        {
            title: ui.slider_defaults[2].title,
            body: ui.slider_defaults[2].body
        }
    ] %}
    {% set sliderItems = sliderItems|default([]) %}
