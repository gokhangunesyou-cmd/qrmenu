{% block javascripts %}
<script>
    window.addEventListener('DOMContentLoaded', function () {
        const slider = document.querySelector('.js-home-slider');
        if (!slider) {
            return;
        }

        const track = slider.querySelector('.slider-track');
        const slides = Array.from(slider.querySelectorAll('.slide'));
        const dots = Array.from(slider.querySelectorAll('[data-slide-to]'));
        const prevBtn = slider.querySelector('[data-prev]');
        const nextBtn = slider.querySelector('[data-next]');
        const autoPlay = slider.dataset.autoplay === 'true';
        const intervalMs = Number(slider.dataset.interval || 5500);

        let index = 0;
        let timer = null;

        const setIndex = (nextIndex) => {
            if (!slides.length) {
                return;
            }
            index = (nextIndex + slides.length) % slides.length;
            track.style.transform = `translateX(-${index * 100}%)`;
            dots.forEach((dot, dotIndex) => dot.classList.toggle('active', dotIndex === index));
        };

        const start = () => {
            if (!autoPlay || slides.length < 2) {
                return;
            }
            stop();
            timer = window.setInterval(() => setIndex(index + 1), intervalMs);
        };

        const stop = () => {
            if (timer) {
                window.clearInterval(timer);
                timer = null;
            }
        };

        prevBtn && prevBtn.addEventListener('click', () => {
            setIndex(index - 1);
            start();
        });

        nextBtn && nextBtn.addEventListener('click', () => {
            setIndex(index + 1);
            start();
        });

        dots.forEach((dot) => {
            dot.addEventListener('click', () => {
                setIndex(Number(dot.dataset.slideTo || 0));
                start();
            });
        });

        slider.addEventListener('mouseenter', stop);
        slider.addEventListener('mouseleave', start);

        setIndex(0);
        start();
    });
</script>
