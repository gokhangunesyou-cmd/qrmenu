        }
        .plan-features li { line-height: 1.35; }
        .footer { border-top: 1px solid var(--border); padding: 2rem 0; color: var(--muted); }
        @media (max-width: 768px) {
            .nav-links { display: none; }
        }
    </style>
{% endblock %}

{% block body %}
    <header class="hero">
        <div class="container nav">
            <div class="brand">
                <span class="brand-dot"></span>
                <span>{{ cms.headerBrand }}</span>
            </div>
            <nav class="nav-links">
                <a href="#slider">{{ ui.nav_slider }}</a>
                <a href="#features">{{ ui.nav_features }}</a>
                <a href="#panel">{{ ui.nav_panel }}</a>
                <a href="#plans">{{ ui.nav_plans }}</a>
                <a href="#references">{{ ui.nav_references }}</a>
                <a href="#blog">{{ ui.nav_blog }}</a>
                <a href="#contact">{{ ui.nav_contact }}</a>
            </nav>
            <div class="lang-switch">
                {% for locale, label in availableLocales %}
                    <a href="{{ path('site_home', {lang: locale}) }}" class="{{ locale == currentLocale ? 'active' : '' }}">{{ label }}</a>
                {% endfor %}
            </div>
            <a class="btn btn-primary" href="{{ cms.headerCtaUrl }}">{{ cms.headerCtaText }}</a>
        </div>

        {% for widget in widgets %}
            {% if widget.type == 'hero' %}
                <div class="container hero-grid">
                    <div>
                        <div class="badge">{{ widget.config.eyebrow }}</div>
                        <h1 class="hero-statement">{{ widget.config.title }}</h1>
                        <p style="color: var(--muted); font-size: 1.05rem;">{{ widget.config.description }}</p>
                        <div style="display: flex; gap: 0.8rem; flex-wrap: wrap;">
                            <a class="btn btn-primary" href="{{ widget.config.primary_url }}">{{ widget.config.primary_text }}</a>
                            <a class="btn btn-ghost" href="{{ widget.config.secondary_url }}">{{ widget.config.secondary_text }}</a>
                        </div>
                    </div>
                    <div class="hero-card">
                        <div class="stripe">
                            <strong>{{ widget.config.badge }}</strong>
                            <p style="margin: 0.6rem 0 0; color: var(--muted);">{{ widget.config.description }}</p>
                        </div>
                        <img src="{{ widget.config.image_url }}" alt="hero" style="width: 100%; border-radius: 18px; margin-top: 1.2rem;">
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </header>

    {% for widget in widgets %}
        {% if widget.type == 'slider' %}
            <section class="section" id="slider">
                <div class="container">
                    <div class="section-header">
                        <h2>{{ widget.config.title }}</h2>
                        <p>{{ widget.config.note }}</p>
                    </div>
                    <div class="grid">
                        {% for item in sliderItems %}
                            <div class="card">
                                <small class="text-muted">{{ item.kicker }}</small>
                                <h3>{{ item.title }}</h3>
                                <p>{{ item.body }}</p>
                                {% if item.imageUrl %}
                                    <img src="{{ item.imageUrl }}" alt="{{ item.title }}" style="width: 100%; border-radius: 14px; margin-top: 1rem;">
                                {% endif %}
                            </div>
                        {% else %}
                            <div class="card">Slider icerigi bulunamadi.</div>
                        {% endfor %}
                    </div>
                </div>
            </section>
        {% endif %}

        {% if widget.type == 'features' %}
            <section class="section" id="features">
                <div class="container">
                    <div class="section-header">
                        <h2>{{ widget.config.title }}</h2>
                        <p>{{ widget.config.note }}</p>
                    </div>
                    <div class="grid">
                        {% for item in widget.config.items_json %}
                            <div class="card">
                                <h3>{{ item.title }}</h3>
                                <p>{{ item.body }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </section>
        {% endif %}

        {% if widget.type == 'panel' %}
            <section class="section" id="panel">
                <div class="container">
                    <div class="section-header">
                        <h2>{{ widget.config.title }}</h2>
                        <p>{{ widget.config.note }}</p>
                    </div>
                    <div class="grid">
                        {% for shot in widget.config.shots_json %}
                            <div class="card">
                                <img src="{{ shot.image }}" alt="{{ shot.title }}" style="width: 100%; border-radius: 14px;">
                                <h3 style="margin-top: 1rem;">{{ shot.title }}</h3>
                                <p>{{ shot.body }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </section>
        {% endif %}

        {% if widget.type == 'plans' %}
            <section class="section" id="plans">
                <div class="container">
                    <div class="section-header">
                        <h2>{{ widget.config.title }}</h2>
                        <p>{{ widget.config.note }}</p>
                    </div>
                    <div class="grid">
                        {% for plan in plans %}
                            <div class="card">
                                {% set planCode = plan.code|lower %}
                                {% set planDescription = planContent.descriptions[planCode] ?? (plan.description ?: planContent.default_description) %}
                                {% set planFeatures = planContent.features[planCode] ?? planContent.features.default %}
                                {% set planOriginalPrice = planContent.original_prices[planCode] ?? null %}
                                {% set planDisplayPrice = planContent.display_prices[planCode] ?? plan.yearlyPrice %}
                                {% set planDurationSuffix = planContent.duration_suffixes[planCode] ?? planContent.default_duration_suffix %}
                                {% if loop.index == 2 %}
                                    <div class="badge">{{ widget.config.badge }}</div>
                                {% endif %}
                                <h3 class="plan-title">{{ plan.name }}</h3>
                                <p class="plan-desc">{{ planDescription }}</p>
                                {% if planOriginalPrice %}
                                    <p class="plan-price-old">{{ planOriginalPrice }} TRY</p>
                                {% endif %}
                                <p class="plan-price">{{ planDisplayPrice }} TRY <span>{{ planDurationSuffix }}</span></p>
                                <div class="plan-limits">
                                    <div>ğŸª {{ planContent.limit_restaurant }}: <strong>{{ plan.maxRestaurants }}</strong></div>
                                    <div>ğŸ‘¤ {{ planContent.limit_user }}: <strong>{{ plan.maxUsers }}</strong></div>
                                </div>
                                <ul class="plan-features">
                                    {% for feature in planFeatures %}
                                        <li>{{ feature }}</li>
                                    {% endfor %}
                                </ul>
                                <a class="btn btn-primary" href="{{ path('site_signup', {lang: currentLocale}) }}">{{ ui.plan_cta }}</a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </section>
        {% endif %}

        {% if widget.type == 'references' %}
            <section class="section" id="references">
                <div class="container">
                    <div class="section-header">
                        <h2>{{ widget.config.title }}</h2>
                        <p>{{ widget.config.note }}</p>
                    </div>
                    <div class="grid">
                        {% for item in widget.config.items_json %}
                            <div class="card">
                                <h3>{{ item.title }}</h3>
                                <p>{{ item.body }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </section>
        {% endif %}

        {% if widget.type == 'blog' %}
            <section class="section" id="blog">
                <div class="container">
                    <div class="section-header">
                        <h2>{{ widget.config.title }}</h2>
                        <p>{{ widget.config.note }}</p>
                    </div>
                    <div class="grid">
                        {% for post in posts %}
                            {% set view = postView[post.id] ?? {title: post.title, body: post.body} %}
                            <div class="card">
                                <h3>{{ view.title }}</h3>
                                <p>{{ view.body|striptags|slice(0, 180) }}...</p>
                                <a class="btn btn-ghost" href="{{ path('site_blog_detail', {slug: post.slug, lang: currentLocale}) }}">{{ ui.blog_read }}</a>
                            </div>
                        {% else %}
                            <div class="card">{{ ui.blog_empty }}</div>
                        {% endfor %}
                    </div>
                </div>
            </section>
        {% endif %}

        {% if widget.type == 'contact' %}
            <section class="section" id="contact">
                <div class="container">
                    <div class="section-header">
                        <h2>{{ widget.config.title }}</h2>
                        <p>{{ widget.config.note }}</p>
                    </div>
                    <div class="grid">
                        <div class="card">
                            <h3>{{ ui.contact_email }}</h3>
                            <p>{{ widget.config.email }}</p>
                        </div>
                        <div class="card">
                            <h3>{{ ui.contact_phone }}</h3>
                            <p>{{ widget.config.phone }}</p>
                        </div>
                    </div>
                </div>
            </section>
        {% endif %}

        {% if widget.type == 'custom_html' %}
            <section class="section">
                <div class="container">
                    {{ widget.config.html|raw }}
                </div>
            </section>
        {% endif %}
    {% endfor %}

    <footer class="footer">
        <div class="container">
            {{ cms.footerText }}
        </div>
    </footer>
{% endblock %}
