{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family={{ theme.font_head|replace({' ': '+'}) }}:wght@600;700&family={{ theme.font_body|replace({' ': '+'}) }}:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: {{ theme.palette.primary }};
            --primary-dark: {{ theme.palette.primaryDark }};
            --primary-light: {{ theme.palette.primaryLight }};
            --accent: {{ theme.palette.accent }};
            --bg: {{ theme.palette.background }};
            --surface: {{ theme.palette.surface }};
            --text: {{ theme.palette.text }};
            --muted: {{ theme.palette.muted }};
            --border: {{ theme.palette.border }};
            --highlight: {{ theme.palette.highlight }};
            --hero-glow: {{ theme.palette.heroGlow }};
        }

        * { box-sizing: border-box; }
        body {
            margin: 0;
            font-family: '{{ theme.font_body }}', sans-serif;
            color: var(--text);
            background:
                linear-gradient(120deg, rgba(249, 115, 22, 0.12), transparent 40%),
                linear-gradient(220deg, rgba(14, 165, 233, 0.18), transparent 45%),
                var(--bg);
        }
        h1, h2, h3, h4 { font-family: '{{ theme.font_head }}', sans-serif; margin: 0; }
        a { color: inherit; text-decoration: none; }

        .container { width: min(1200px, 92vw); margin: 0 auto; }
        .hero {
            position: relative;
            padding: 4.5rem 0 4rem;
        }
        .hero::after {
            content: '';
            position: absolute;
            inset: auto 0 0 0;
            height: 120px;
            background: linear-gradient(180deg, transparent, rgba(0,0,0,0.04));
        }
        .nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;
            padding: 1.2rem 0;
        }
        .brand {
            font-weight: 700;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }
        .brand-dot {
            width: 14px;
            height: 14px;
            border-radius: 50%;
            background: var(--accent);
            box-shadow: 0 0 0 6px rgba(249, 115, 22, 0.15);
        }
        .nav-links { display: flex; gap: 1rem; font-size: 0.95rem; }
        .nav-links a { padding-bottom: 4px; border-bottom: 2px solid transparent; }
        .nav-links a:hover { border-color: var(--accent); }
        .lang-switch { display: flex; gap: 0.35rem; }
        .lang-switch a { padding: 0.2rem 0.6rem; border-radius: 8px; border: 1px solid var(--border); }
        .lang-switch a.active { background: var(--primary); color: #fff; border-color: transparent; }
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.8rem 1.5rem;
            border-radius: 12px;
            border: 1px solid transparent;
            font-weight: 600;
        }
        .btn-primary { background: var(--primary); color: #fff; }
        .btn-ghost { border-color: var(--border); background: transparent; }
        .hero-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 2.5rem;
            align-items: center;
        }
        .hero-statement {
            font-size: clamp(2rem, 4.5vw, 3.6rem);
            line-height: 1.05;
        }
        .hero-card {
            background: var(--surface);
            border-radius: 24px;
            padding: 1.8rem;
            border: 1px solid var(--border);
            box-shadow: 0 20px 50px rgba(15,23,42,0.15);
        }
        .section { padding: 3.5rem 0; }
        .section-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 2rem;
            margin-bottom: 2rem;
        }
        .section-header p { color: var(--muted); max-width: 480px; margin: 0; }
        .text-muted { color: var(--muted); }
        .grid { display: grid; gap: 1.3rem; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); }
        .card {
            background: var(--surface);
            border-radius: 18px;
            padding: 1.4rem;
            border: 1px solid var(--border);
        }
        .stripe {
            background: var(--primary-light);
            border-radius: 20px;
            padding: 1.4rem;
        }
        .badge {
            display: inline-flex;
            padding: 0.3rem 0.7rem;
            border-radius: 999px;
            background: var(--accent);
            color: #fff;
            font-size: 0.75rem;
        }
